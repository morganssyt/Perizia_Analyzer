# OpenAI API key (required for PDF analysis)
OPENAI_API_KEY=

# Database — Neon PostgreSQL
# Get both URLs from: Neon console → your project → Connection Details → "Prisma" tab
DATABASE_URL=postgresql://user:password@ep-xxx.eu-central-1.aws.neon.tech/neondb?sslmode=require&pgbouncer=true
DIRECT_URL=postgresql://user:password@ep-xxx.eu-central-1.aws.neon.tech/neondb?sslmode=require

# PDF size limit for the analysis route (MB, default 15)
MAX_PDF_MB=15

# OpenAI request timeout in milliseconds (default 90000)
ANALYZE_TIMEOUT_MS=90000

# Upload size limit (MB, default 50)
MAX_FILE_SIZE_MB=50

# Upload directory
UPLOAD_DIR=./uploads
